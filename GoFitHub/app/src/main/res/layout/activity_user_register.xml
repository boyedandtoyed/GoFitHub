<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Personal Information Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Personal Information Section"
            android:textSize="20sp" />

        <!-- First Name Label and Input -->
        <EditText
            android:lines="1"
            android:textColor="@color/text_color"
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:hint="Enter your first name"
            android:textColorHint="@color/hint_text_color"
            android:background="@drawable/rounded_corners"/>

        <!-- Last Name Label and Input -->

        <EditText
            android:lines="1"
            android:textColor="@color/text_color"
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_text_color"
            android:hint="Enter your last name"
            android:background="@drawable/rounded_corners"/>

        <!-- Email Label and Input -->

        <EditText
            android:lines="1"
            android:textColor="@color/text_color"
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:hint="Enter your email"
            android:textColorHint="@color/hint_text_color"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_corners"/>

        <!-- Password Label and Input -->

        <EditText
            android:lines="1"
            android:textColor="@color/text_color"
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:hint="Enter your password"
            android:textColorHint="@color/hint_text_color"
            android:inputType="textPassword"
            android:background="@drawable/rounded_corners"/>

        <!-- Confirm Password Label and Input -->

        <EditText
            android:lines="1"
            android:textColor="@color/text_color"
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:textColorHint="@color/hint_text_color"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_corners"/>

        <!-- Upload Profile Picture -->
        <Button
            android:id="@+id/buttonUploadPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Profile Picture"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color"/>

        <!-- Physical Information Section -->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Physical Information Section"
            android:textSize="20sp" />

        <!-- Weight Label and Input -->

        <EditText
            android:lines="1"
            android:textColor="@color/text_color"
            android:id="@+id/weightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:textColorHint="@color/hint_text_color"
            android:hint="Enter your weight in kilograms"
            android:inputType="number"
            android:background="@drawable/rounded_corners"/>

        <!-- Height Label and Input -->

        <EditText
            android:lines="1"

            android:textColor="@color/text_color"
            android:id="@+id/heightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:hint="Enter your height in centimeters"
            android:textColorHint="@color/hint_text_color"
            android:inputType="number"
            android:background="@drawable/rounded_corners"/>

        <!-- Date of Birth Label and Input -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
        <Button
            android:id="@+id/dobEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color"
            android:text="MM/DD/YYYY"
            android:padding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <!-- Goals Section -->
        <TextView
            android:id="@+id/goalsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Goals"
            android:textSize="20sp" />

        <!-- Goal Type Spinner Label and Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Goal"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
        <Spinner
            android:id="@+id/goalTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:prompt="@string/select_goal_prompt"
            android:padding="8dp" />

        <!-- Goal Explanation Label and Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Briefly Explain Your Goals"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
        <EditText
            android:lines="3"
            android:textColor="@color/text_color"
            android:id="@+id/goalExplanationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:hint="..."
            android:textColorHint="@color/hint_text_color"
            android:background="@drawable/rounded_corners"
            android:inputType="textMultiLine" />

        <!-- Terms and Conditions and Register Button -->
        <TextView
            android:id="@+id/termsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/error_color"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Register"
            android:backgroundTint="@color/button_color"

            android:textColor="@color/button_text_color"/>

    </LinearLayout>
</ScrollView>
