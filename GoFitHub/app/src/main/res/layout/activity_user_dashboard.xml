<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboardActivity">

    <!-- Top Header with User's Name and Profile Picture -->
    <TextView
        android:id="@+id/helloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, User!"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

<!--    <ImageView-->
<!--        android:id="@+id/profileImageView"-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:layout_marginTop="16dp"-->
<!--        android:layout_marginEnd="16dp"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:src="@drawable/ic_profile_placeholder"-->
<!--        android:contentDescription="Profile Picture"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:clipToOutline="true"  &lt;!&ndash; Clip image into a circular shape &ndash;&gt;-->
<!--    android:background="@drawable/circular_border"-->
<!--    app:layout_constraintTop_toTopOf="parent"-->
<!--    app:layout_constraintEnd_toEndOf="parent" />-->

    <!-- Recent Plans and Progress Section -->
    <LinearLayout
        android:id="@+id/recentPlansSection"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/helloTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Recent Plan -->
        <TextView
            android:id="@+id/recentPlansTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Plans"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You need to take 5000 steps today to reach your goal!"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Subscribe Section -->
    <FrameLayout
        android:id="@+id/subscribeSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/recentPlansSection"
        android:background="@color/subscribeBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/subscribeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe and feel the benefits!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Footer Section with 5 Buttons -->
    <LinearLayout
        android:id="@+id/footerSection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Friends Button -->

        <!-- Activities Button -->
        <Button
            android:id="@+id/friendsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/button_color"
            android:text="Friends"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/activitiesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activities"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/button_color" />

        <!-- Home Button -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/button_color" />

        <!-- Plans Button -->
        <Button
            android:id="@+id/plansButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plans"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/button_color" />

        <!-- Training Button -->
        <Button
            android:id="@+id/trainingButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Training"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/button_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
